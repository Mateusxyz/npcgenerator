<link rel="stylesheet" href="http://127.0.0.1:8080/css/card.css">

<div class="card-wrapper border border-secondary">
    <div class="card">
        <div class="stats">
            <!--
            Render all attributes with random values
            -->
            <div class="attributes">
                <% attributes.forEach(function(attribute) { %>
                <span class="attributes-item"><%= attribute%>: <%= attribute_value[attribute]; %></span>
                <% }) %>
            </div>
            <div class="health">
                <span>Hit Points: <%= TotalHitPoints %></span>
                <span>Seriously Wounded: <%= SeriouslyWounded %></span>
                <span>Death Save: <%= body %></span>
            </div>
        </div>
        <div class="inventory">
            <div class="weapons">
                <%=selectedWeaponName[0]+" "%> <button class="dice" data-roll="<%=damage%>">  <%=damage%>  </button> <%=" "+magazine%>
              </div>
              <div class="skills">
                  <% skills.forEach(function(skill){ %>
                     <span><%= skill.skill %> <%= skill.level%>, </span>
                 <% })%>
              </div>
              <div class="cyberwear">
                Cybereye: Anti-Dazzle, Chyron; Neural Link: Sandevistan
              </div>
        </div>
    </div>    
</div>




